<!DOCTYPE html>
<html class="h-100" lang="pt-BR">

<head>
  <%- include('../../partials/head') %>
</head>

<body class="d-flex flex-column h-100">
  <%- include('../../partials/header') %>

  <main class="flex-shrink-0">
    <div class="troco">
      <h1 class="mt-5 mb-5">Despesas</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Valor</th>
          </tr>
        </thead>
        <tbody>

          <% users.forEach((user)=> {%>

          <% if (user.tipoValor === 'd') { %>
        
          <tr class="align-middle">
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.valor %></td>
            <td><%= user.tipoValor %></td>
            <td><a class="btn btn-primary" href="/despesa/edit/<%= user.id %>">Editar</a></td>
            <td>
              <a class="btn btn-danger delete-user" href="/despesa/delete/<%= user.id%>"
                user-id="<%= user.id %>">Excluir</a>
            </td>
          </tr>
          <% } %>
          <% })%>
        </tbody>
      </table>
    </div>


    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/user-delete.js"></script>
</body>

</html>